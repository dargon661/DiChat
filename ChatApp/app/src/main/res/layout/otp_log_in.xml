<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPLogIn">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_veri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Phone verifiction"
            android:textColor="@color/black"
            android:textSize="40dp" />

        <TextView

            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="45dp"
            android:text="Enter the code sent to your phone "
            android:textColor="@color/gray"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tint="@color/blue"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/lock_image"
            />


        <!-- OTP Input Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:id="@+id/otp_digit_1"
                android:layout_width="55dp"
                android:layout_height="55dp"

                android:background="@drawable/otp_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="18sp"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/otp_digit_2"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/otp_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="18sp"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/otp_digit_3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/otp_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="18sp"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/otp_digit_4"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/otp_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="18sp"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/otp_digit_5"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/otp_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="18sp"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/otp_digit_6"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="4dp"
                android:background="@drawable/otp_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="18sp"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <!-- Resend Section -->
        <TextView
            android:id="@+id/resend_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="didnt get the code?"
            android:textSize="14sp"

            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Timer -->
        <Button
            android:id="@+id/OLIsend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send again"
            android:background="@android:color/transparent"
            android:textColor="@color/blue"

            android:textSize="15sp"
            android:padding="2dp"
            android:gravity="center" />


        <!-- Continue Button -->
        <Button

            android:id="@+id/ICbtn"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/blue"
            android:text="Next" />

        <ProgressBar
            android:id="@+id/OTIprogressBar"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:indeterminateTint="@color/blue"
            android:layout_height="wrap_content" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>